{{end}}

[gpg]
	format = ssh

[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
	gpgsign = true

[includeIf "gitdir:~/workspaces/eric/"]
	path = ~/workspaces/eric/.gitconfig

[core]
	excludesfile = /Users/ericklaus/.gitignore_global
	editor = emacsclient -nw 
	autocrlf = input

[alias]
	plog = log --first-parent
	mergeup = merge upstream/master --ff-only
	dt = difftool --dir-diff
	repr = rebase -i @{r}

[push]
	default = current

[rerere]
	enabled = true

{{ if .work_device -}} 
[diff]
	tool = bcomp
[merge]
	tool = bcomp
	renamelimit = 4000
{{end}}

[difftool]
	prompt = false
[difftool "bcomp"]
	trustExitCode = true
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
[merge "gomergesum"]
	name = "Merges two Go go.sum files"
	driver = gomodmerge sum --file-ancestor="%O" --file-current="%A" --file-other="%B" --local-head-name="%X" --other-head-name="%Y" --conflict-placeholder-size="%L"
[merge "gomergemod"]
	name = "Merges two Go go.mod files"
	driver = gomodmerge mod --file-ancestor="%O" --file-current="%A" --file-other="%B" --local-head-name="%X" --other-head-name="%Y" --conflict-placeholder-size="%L" 
[mergetool]
    prompt = false
	keepBackup = false
[mergetool "bcomp"]
    trustExitCode = true
    cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rebase]
	autosquash = true

[url "git@github.com:"]
    insteadOf = https://github.com

[init]
	defaultBranch = main
