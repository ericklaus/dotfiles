function git-rm-merged -d "Delete merged branches"
  git branch --merged | egrep -v "(^\*|master|main)" | xargs -r git branch -d
end

function gofmtall -d "Formats all Go files below this directory"
	fd -E vendor -e go | xargs -P 4 gofmt -w
end

